    <script>
        // ============================================
        // GLOBAL STATE
        // ============================================
        const devices = new Map();
        const alerts = [];
        const chartData = {
            labels: [],
            latency: { 'router-1': [], 'switch-1': [], 'firewall-1': [] },
            bandwidth: { 'router-1': [], 'switch-1': [], 'firewall-1': [] },
            packetLoss: { 'router-1': [], 'switch-1': [], 'firewall-1': [] }
        };
        const MAX_DATA_POINTS = 30; // Show last 30 data points on chart

        let socket = null;
        let reconnectAttempts = 0;
        const MAX_RECONNECT_ATTEMPTS = 10;

        // Chart instances
        let latencyChart = null;
        let bandwidthChart = null;
        let packetLossChart = null;

        // ============================================
        // UTILITY FUNCTIONS
        // ============================================

        function formatTime(timestamp) {
            if (!timestamp) return '--:--:--';
            const date = new Date(timestamp.replace(' ', 'T') + '+07:00');
            return date.toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
        }

        function updateCurrentTime() {
            const now = new Date();
            document.getElementById('current-time').textContent =
                now.toLocaleTimeString('id-ID', {
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit',
                    timeZone: 'Asia/Jakarta'
                });
        }

        function showToast(message, type = 'info') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');

            const bgColors = {
                success: 'bg-green-600',
                warning: 'bg-yellow-600',
                danger: 'bg-red-600',
                info: 'bg-blue-600'
            };

            toast.className = `toast-enter ${bgColors[type] || bgColors.info} text-white px-4 py-3 rounded-lg shadow-lg max-w-sm flex items-center gap-3`;
            toast.innerHTML = `
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-sm">${message}</span>
            `;

            container.appendChild(toast);

            setTimeout(() => {
                toast.classList.remove('toast-enter');
                toast.classList.add('toast-exit');
                setTimeout(() => toast.remove(), 300);
            }, 5000);
        }

        // ============================================
        // WEBSOCKET CONNECTION
        // ============================================

        function connectWebSocket() {
            updateConnectionStatus('connecting');

            socket = io({
                reconnection: true,
                reconnectionAttempts: MAX_RECONNECT_ATTEMPTS,
                reconnectionDelay: 1000,
                reconnectionDelayMax: 5000
            });

            socket.on('connect', () => {
                console.log('[WS] Connected');
                reconnectAttempts = 0;
                updateConnectionStatus('connected');
                hideLoadingOverlay();
            });

            socket.on('disconnect', () => {
                console.log('[WS] Disconnected');
                updateConnectionStatus('disconnected');
            });

            socket.on('connect_error', (error) => {
                console.error('[WS] Connection error:', error);
                reconnectAttempts++;
                updateConnectionStatus('error');

                if (reconnectAttempts >= MAX_RECONNECT_ATTEMPTS) {
                    showToast('Gagal terhubung ke server. Silakan refresh halaman.', 'danger');
                }
            });

            // Handle device updates
            socket.on('deviceUpdate', (device) => {
                console.log('[WS] Device update:', device.name, device.status);
                updateDevice(device);
            });

            // Handle alerts
            socket.on('alert', (alert) => {
                console.log('[WS] Alert:', alert.message);
                addAlert(alert);
                showToast(alert.message, alert.severity);
            });
        }

        function updateConnectionStatus(status) {
            const indicator = document.getElementById('ws-indicator');
            const text = document.getElementById('ws-text');

            const statusConfig = {
                connecting: { color: 'bg-yellow-500', text: 'Connecting...' },
                connected: { color: 'bg-green-500', text: 'Connected' },
                disconnected: { color: 'bg-red-500', text: 'Disconnected' },
                error: { color: 'bg-red-500', text: 'Connection Error' }
            };

            const config = statusConfig[status] || statusConfig.error;
            indicator.className = `w-3 h-3 rounded-full ${config.color}`;
            text.textContent = config.text;
        }

        function hideLoadingOverlay() {
            const overlay = document.getElementById('loading-overlay');
            overlay.style.opacity = '0';
            setTimeout(() => overlay.style.display = 'none', 300);
        }

        // ============================================
        // DEVICE MANAGEMENT
        // ============================================

        function updateDevice(device) {
            devices.set(device.id, device);
            renderDeviceTable();
            renderControlButtons();
            updateStats();
            updateCharts(device);
        }

        function renderDeviceTable() {
            const tbody = document.getElementById('device-table');
            tbody.innerHTML = '';

            devices.forEach((device, id) => {
                const row = document.createElement('tr');
                row.className = 'hover:bg-dark-700/50 transition-colors';

                const statusClass = device.status === 'online'
                    ? 'bg-green-500 pulse-online'
                    : 'bg-red-500 pulse-offline';

                const statusText = device.status === 'online' ? 'Online' : 'Offline';

                // Calculate countdown if simulating
                let countdownText = '';
                if (device.simulateDown && device.simulateDownUntil) {
                    const remaining = Math.max(0, Math.ceil((device.simulateDownUntil - Date.now()) / 1000));
                    if (remaining > 0) {
                        countdownText = `<span class="text-xs text-red-400 block">(${remaining}s)</span>`;
                    }
                }

                row.innerHTML = `
                    <td class="px-4 py-4">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-lg bg-dark-700 flex items-center justify-center">
                                ${getDeviceIcon(device.type)}
                            </div>
                            <div>
                                <div class="font-medium text-white">${device.name}</div>
                                <div class="text-xs text-gray-500">${device.type}</div>
                            </div>
                        </div>
                    </td>
                    <td class="px-4 py-4">
                        <code class="text-sm text-gray-300 bg-dark-700 px-2 py-1 rounded">${device.ip}</code>
                    </td>
                    <td class="px-4 py-4 text-center">
                        <div class="flex flex-col items-center">
                            <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-medium ${device.status === 'online' ? 'bg-green-500/20 text-green-400' : 'bg-red-500/20 text-red-400'}">
                                <span class="w-2 h-2 rounded-full ${statusClass}"></span>
                                ${statusText}
                            </span>
                            ${countdownText}
                        </div>
                    </td>
                    <td class="px-4 py-4 text-right">
                        <span class="${device.latency > 200 ? 'text-yellow-400' : 'text-gray-300'}">${device.latency.toFixed(2)} ms</span>
                    </td>
                    <td class="px-4 py-4 text-right">
                        <span class="${device.bandwidth > 80 ? 'text-yellow-400' : 'text-gray-300'}">${device.bandwidth.toFixed(2)} Mbps</span>
                    </td>
                    <td class="px-4 py-4 text-right">
                        <span class="${device.packetLoss > 3 ? 'text-red-400' : 'text-gray-300'}">${device.packetLoss.toFixed(2)}%</span>
                    </td>
                    <td class="px-4 py-4 text-center">
                        <button
                            onclick="simulateDown('${device.id}')"
                            ${device.simulateDown ? 'disabled' : ''}
                            class="px-3 py-1.5 text-xs font-medium rounded-lg transition-colors ${device.simulateDown ? 'bg-gray-600 text-gray-400 cursor-not-allowed' : 'bg-red-600 hover:bg-red-700 text-white'}">
                            ${device.simulateDown ? 'Simulating...' : 'Simulate Down'}
                        </button>
                    </td>
                `;

                tbody.appendChild(row);
            });
        }

        function getDeviceIcon(type) {
            const icons = {
                Router: '<svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"/></svg>',
                Switch: '<svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/></svg>',
                Firewall: '<svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>'
            };
            return icons[type] || icons.Router;
        }

        function renderControlButtons() {
            const container = document.getElementById('control-buttons');
            container.innerHTML = '';

            devices.forEach((device, id) => {
                const btn = document.createElement('button');
                btn.className = `w-full flex items-center justify-between px-4 py-3 rounded-lg text-sm font-medium transition-colors ${device.simulateDown ? 'bg-gray-700 text-gray-400 cursor-not-allowed' : 'bg-dark-700 hover:bg-dark-600 text-white'}`;
                btn.disabled = device.simulateDown;
                btn.onclick = () => simulateDown(id);

                let statusIndicator = '';
                if (device.simulateDown && device.simulateDownUntil) {
                    const remaining = Math.max(0, Math.ceil((device.simulateDownUntil - Date.now()) / 1000));
                    statusIndicator = `<span class="text-red-400">${remaining}s</span>`;
                } else {
                    statusIndicator = `<span class="w-2 h-2 rounded-full ${device.status === 'online' ? 'bg-green-500' : 'bg-red-500'}"></span>`;
                }

                btn.innerHTML = `
                    <span class="flex items-center gap-2">
                        ${getDeviceIcon(device.type)}
                        ${device.name}
                    </span>
                    ${statusIndicator}
                `;

                container.appendChild(btn);
            });
        }

        function updateStats() {
            let online = 0;
            let offline = 0;

            devices.forEach(device => {
                if (device.status === 'online') online++;
                else offline++;
            });

            document.getElementById('online-count').textContent = online;
            document.getElementById('offline-count').textContent = offline;
            document.getElementById('device-count').textContent = `${devices.size} devices`;
        }

        // ============================================
        // CHARTS
        // ============================================

        function initCharts() {
            const chartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                animation: {
                    duration: 300
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#9ca3af',
                            usePointStyle: true,
                            padding: 15
                        }
                    }
                },
                scales: {
                    x: {
                        grid: {
                            color: '#374151',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#9ca3af',
                            maxRotation: 0
                        }
                    },
                    y: {
                        grid: {
                            color: '#374151',
                            drawBorder: false
                        },
                        ticks: {
                            color: '#9ca3af'
                        },
                        beginAtZero: true
                    }
                }
            };

            // Latency Chart
            latencyChart = new Chart(document.getElementById('latency-chart'), {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [
                        { label: 'Router Utama', data: [], borderColor: '#3b82f6', backgroundColor: 'rgba(59, 130, 246, 0.1)', tension: 0.3, fill: true },
                        { label: 'Switch Core', data: [], borderColor: '#22c55e', backgroundColor: 'rgba(34, 197, 94, 0.1)', tension: 0.3, fill: true },
                        { label: 'Firewall Security', data: [], borderColor: '#ef4444', backgroundColor: 'rgba(239, 68, 68, 0.1)', tension: 0.3, fill: true }
                    ]
                },
                options: chartOptions
            });

            // Bandwidth Chart
            bandwidthChart = new Chart(document.getElementById('bandwidth-chart'), {
                type: 'bar',
                data: {
                    labels: [],
                    datasets: [
                        { label: 'Router Utama', data: [], backgroundColor: 'rgba(59, 130, 246, 0.8)' },
                        { label: 'Switch Core', data: [], backgroundColor: 'rgba(34, 197, 94, 0.8)' },
                        { label: 'Firewall Security', data: [], backgroundColor: 'rgba(239, 68, 68, 0.8)' }
                    ]
                },
                options: {
                    ...chartOptions,
                    scales: {
                        ...chartOptions.scales,
                        y: {
                            ...chartOptions.scales.y,
                            max: 100
                        }
                    }
                }
            });

            // Packet Loss Chart
            packetLossChart = new Chart(document.getElementById('packetloss-chart'), {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [
                        { label: 'Router Utama', data: [], borderColor: '#3b82f6', backgroundColor: 'rgba(59, 130, 246, 0.1)', tension: 0.3, fill: true },
                        { label: 'Switch Core', data: [], borderColor: '#22c55e', backgroundColor: 'rgba(34, 197, 94, 0.1)', tension: 0.3, fill: true },
                        { label: 'Firewall Security', data: [], borderColor: '#ef4444', backgroundColor: 'rgba(239, 68, 68, 0.1)', tension: 0.3, fill: true }
                    ]
                },
                options: {
                    ...chartOptions,
                    scales: {
                        ...chartOptions.scales,
                        y: {
                            ...chartOptions.scales.y,
                            max: 10
                        }
                    }
                }
            });
        }

        function updateCharts(device) {
            const time = formatTime(device.timestamp);
            const deviceIndex = { 'router-1': 0, 'switch-1': 1, 'firewall-1': 2 }[device.id];

            if (deviceIndex === undefined) return;

            // Add new label if this is the first device update in this tick
            if (deviceIndex === 0) {
                chartData.labels.push(time);
                if (chartData.labels.length > MAX_DATA_POINTS) {
                    chartData.labels.shift();
                }
            }

            // Update data arrays
            chartData.latency[device.id].push(device.latency);
            chartData.bandwidth[device.id].push(device.bandwidth);
            chartData.packetLoss[device.id].push(device.packetLoss);

            // Trim to max points
            if (chartData.latency[device.id].length > MAX_DATA_POINTS) {
                chartData.latency[device.id].shift();
                chartData.bandwidth[device.id].shift();
                chartData.packetLoss[device.id].shift();
            }

            // Update charts
            if (latencyChart) {
                latencyChart.data.labels = [...chartData.labels];
                latencyChart.data.datasets[deviceIndex].data = [...chartData.latency[device.id]];
                latencyChart.update('none');
            }

            if (bandwidthChart) {
                bandwidthChart.data.labels = [...chartData.labels];
                bandwidthChart.data.datasets[deviceIndex].data = [...chartData.bandwidth[device.id]];
                bandwidthChart.update('none');
            }

            if (packetLossChart) {
                packetLossChart.data.labels = [...chartData.labels];
                packetLossChart.data.datasets[deviceIndex].data = [...chartData.packetLoss[device.id]];
                packetLossChart.update('none');
            }
        }

        // ============================================
        // ALERTS
        // ============================================

        function addAlert(alert) {
            alerts.unshift(alert);
            if (alerts.length > 100) alerts.pop();

            renderAlerts();
            document.getElementById('alert-count').textContent = alerts.length;
        }

        function renderAlerts() {
            const container = document.getElementById('alert-list');

            if (alerts.length === 0) {
                container.innerHTML = '<div class="text-center text-gray-500 py-8">No alerts yet...</div>';
                return;
            }

            container.innerHTML = alerts.map(alert => {
                const severityColors = {
                    success: 'border-green-500 bg-green-500/10',
                    warning: 'border-yellow-500 bg-yellow-500/10',
                    danger: 'border-red-500 bg-red-500/10'
                };

                const severityIcons = {
                    success: '<svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>',
                    warning: '<svg class="w-5 h-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>',
                    danger: '<svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>'
                };

                return `
                    <div class="flex items-start gap-3 p-3 rounded-lg border-l-4 ${severityColors[alert.severity] || severityColors.warning}">
                        ${severityIcons[alert.severity] || severityIcons.warning}
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center gap-2 flex-wrap">
                                <span class="text-sm font-medium text-white">${alert.deviceName}</span>
                                <span class="text-xs text-gray-500">${alert.deviceIp}</span>
                                <span class="text-xs px-2 py-0.5 rounded bg-dark-700 text-gray-400">${alert.eventType}</span>
                            </div>
                            <p class="text-sm text-gray-300 mt-1">${alert.message}</p>
                            <p class="text-xs text-gray-500 mt-1">${alert.timestamp}</p>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // ============================================
        // ACTIONS
        // ============================================

        async function simulateDown(deviceId) {
            try {
                const response = await fetch(`/api/devices/${deviceId}/simulate-down`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await response.json();

                if (data.success) {
                    showToast(data.message, 'warning');
                } else {
                    showToast(data.error, 'danger');
                }
            } catch (error) {
                console.error('Error simulating down:', error);
                showToast('Failed to simulate device down', 'danger');
            }
        }

        function exportLogs() {
            window.location.href = '/api/logs/export';
            showToast('Downloading logs...', 'info');
        }

        // ============================================
        // COUNTDOWN TIMER UPDATE
        // ============================================

        function updateCountdowns() {
            devices.forEach((device, id) => {
                if (device.simulateDown && device.simulateDownUntil) {
                    const remaining = Math.max(0, device.simulateDownUntil - Date.now());
                    if (remaining <= 0) {
                        device.simulateDown = false;
                        device.simulateDownUntil = null;
                    }
                }
            });
            renderDeviceTable();
            renderControlButtons();
        }

        // ============================================
        // INITIALIZATION
        // ============================================

        document.addEventListener('DOMContentLoaded', () => {
            // Init charts
            initCharts();

            // Connect WebSocket
            connectWebSocket();

            // Update time every second
            setInterval(updateCurrentTime, 1000);
            updateCurrentTime();

            // Update countdowns every second
            setInterval(updateCountdowns, 1000);
        });
    </script>
</body>
</html>
